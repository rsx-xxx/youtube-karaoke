{
  "name": "YouTube Karaoke Extension",
  "version": "1.0",
  "description": "Overlay karaoke lyrics on YouTube videos using the Karaoke API",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/watch*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}